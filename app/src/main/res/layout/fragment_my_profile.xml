<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/all_screens_bg"
    tools:context="com.payworks.ui.fragments.MyProfileFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/wallet_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wallet24"
                android:layout_marginEnd="5dp"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Wallet Balance :"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="100$"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
      android:background="@drawable/profile_bg"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/person_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pic_uploader"
            android:layout_marginTop="50dp"
            app:civ_fill_color="@color/lighter_gray"
            android:layout_centerHorizontal="true"
            ></de.hdodenhof.circleimageview.CircleImageView>

        <Button
            android:id="@+id/edit_Profile"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/edit_profile18"
            android:drawablePadding="3dp"
            android:layout_marginRight="20dp"
            android:textSize="10sp"
            android:background="@drawable/button_state_selector"
            android:text="Edit Your Profile"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


    <TextView
        android:id="@+id/user_qr_code"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="15sp"
        android:text="QR Code"
        android:layout_marginTop="50dp"
       />

      <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="1dp"
          android:layout_marginStart="20dp"
          android:layout_marginBottom="5dp"
          android:layout_marginEnd="20dp">

           <View style="@style/Divider_light_gray" />
       </LinearLayout>


    <TextView
        android:id="@+id/user_name"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="15sp"
        android:text="Name"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp">

        <View style="@style/Divider_light_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/user_phone_num"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="15sp"
        android:text="Phone Number"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp">

        <View style="@style/Divider_light_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/user_email"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="15sp"
        android:text="Email Id"
        android:layout_marginTop="10dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp">

        <View style="@style/Divider_light_gray" />
    </LinearLayout>



    <TextView
        android:id="@+id/user_country"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="15sp"
        android:text="Country"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp">

        <View style="@style/Divider_light_gray" />
    </LinearLayout>
   <Button
       android:id="@+id/submit"
       style="?android:textAppearanceSmall"
       android:layout_width="200dp"
       android:layout_height="30dp"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="30dp"
       android:background="@drawable/button_state_selector"
       android:text="@string/action_submit"
       android:textStyle="bold" />


</LinearLayout>
