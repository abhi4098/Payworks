<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/all_screens_bg"
    tools:context="com.payworks.ui.fragments.MerchantFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:text="Amount to Withdraw( Do not add '$' sign.)"/>
    <EditText
        android:id="@+id/withdraw_amount"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textStyle="normal"
        android:inputType="number"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="15sp"
        android:background="@drawable/rectangular_background"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:hint="Withdrawal Limit $10-$10000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/profile_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Choose Method of Payment"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:background="@drawable/rectangular_background"
            android:layout_height="35dp">


             <TextView
                 android:id="@+id/direct_deposit"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:textStyle="normal"
                 android:gravity="center_vertical"
                 android:layout_alignParentStart="true"
                 android:layout_gravity="center_horizontal"
                 android:textColor="@color/text_color"
                 android:lines="1"
                 android:background="@android:color/transparent"
                 android:textSize="12sp"
                 android:layout_centerInParent="true"
                 android:hint="Direct Deposit(Cost $2.99 only, 1 withdrawal credit)"/>

            <RadioButton
                android:id="@+id/radio_button_direct_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>




        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/rl_spinner"
            android:visibility="gone"
            android:paddingStart="10dp"
            android:background="@drawable/rectangular_background"
            android:layout_height="35dp">


            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:dropDownVerticalOffset="35dp"
                />




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangular_background"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/regular_mail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="normal"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_color"
                android:lines="1"
                android:background="@android:color/transparent"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:hint="Regular Mail(Cost $10.00 only)"/>

            <RadioButton
                android:id="@+id/radio_button_regular_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangular_background"
            android:layout_marginBottom="20dp"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="normal"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_color"
                android:lines="1"
                android:background="@android:color/transparent"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:hint="Check(Cost $8.00 only)"/>

            <RadioButton
                android:id="@+id/radio_button_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

