<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/all_screens_bg"
    tools:context="com.payworks.ui.fragments.MyProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="3dp"
            android:text="@string/refer_a_friend"
            android:background="@color/theme_primary_dark"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/refer_friend"/>

     <!--   <EditText
            android:id="@+id/user_phone_num"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textStyle="normal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_color"
            android:lines="1"
            android:inputType="phone"
            android:textSize="13sp"
            android:background="@drawable/rectangular_background_grey"
            android:layout_marginTop="30dp"
            android:hint="@string/hint_user_phone_num"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:text="OR"/>-->

        <EditText
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:lines="1"
            android:textColor="@color/text_color"
            android:textStyle="normal"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rectangular_background_grey"
            android:hint="@string/hint_email"
            android:layout_gravity="center_horizontal"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/refer_button"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:text="REFER"
            android:background="@color/theme_primary_dark"
            android:textColor="@color/white"
            android:layout_marginEnd="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:text="@string/refer_a_friend_to_payworks"/>
