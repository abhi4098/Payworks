<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.payworks.ui.activities.RequestMoneyActivity">


    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/user_first_name"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="13sp"
        android:hint="@string/hint_user_first_name"
        android:layout_marginTop="30dp"
        />

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <View style="@style/Divider_light_gray" />
    </LinearLayout>-->


    <EditText
        android:id="@+id/user_last_name"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="13sp"
        android:hint="@string/hint_user_last_name"
        />

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <View style="@style/Divider_light_gray" />
    </LinearLayout>-->

    <EditText
        android:id="@+id/user_phone_num"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="13sp"
        android:hint="@string/hint_user_phone_num"

        />


    <!-- <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_marginStart="20dp"
         android:layout_marginEnd="20dp">

         <View style="@style/Divider_light_gray" />
     </LinearLayout>-->

    <EditText
        android:id="@+id/user_email"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="13sp"
        android:hint="@string/hint_email"
        />
    <EditText
        android:id="@+id/user_address"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="13sp"
        android:hint="@string/hint_address"
        />

    <!--   <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp">

           <View style="@style/Divider_light_gray" />
       </LinearLayout>-->



    <EditText
        android:id="@+id/user_country"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="13sp"
        android:hint="@string/hint_country"
        />

