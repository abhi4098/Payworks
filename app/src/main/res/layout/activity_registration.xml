<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/all_screens_bg"
    tools:context="com.payworks.ui.activities.RegistrationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/theme_primary_dark"
        android:textAlignment="center"
        app:theme="@style/MyToolBar"
        app:titleTextColor="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18sp" />

        </LinearLayout>


    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="30dp"
        >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/new_customer_icon"
        app:civ_fill_color="@color/lighter_gray"
        android:layout_centerHorizontal="true"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/upload_pic"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:padding="5dp"
            android:drawableStart="@drawable/camera18"
            android:drawablePadding="5dp"
            android:textSize="10sp"
            android:text="Upload Image(Optional)"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangular_background_curved_edges"/>

    </RelativeLayout>


    <EditText
        android:id="@+id/user_phone_num"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/phone_reg24"
        android:drawablePadding="5dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textStyle="normal"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:inputType="phone"
        android:textSize="13sp"
        android:background="@drawable/rectangular_background_curved_edges"
        android:layout_marginTop="30dp"
        android:hint="@string/hint_user_phone_num_registration"/>



    <EditText
        android:id="@+id/user_first_name"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/first_last_name24"
        android:drawablePadding="5dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textStyle="normal"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rectangular_background_curved_edges"
        android:layout_marginTop="10dp"
        android:hint="@string/hint_user_first_name"/>



    <EditText
        android:id="@+id/user_last_name"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/first_last_name24"
        android:drawablePadding="5dp"
        android:layout_height="32dp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:lines="1"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rectangular_background_curved_edges"
        android:hint="@string/hint_user_last_name"
        android:inputType="textEmailAddress" />



    <EditText
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/email24"
        android:drawablePadding="5dp"
        android:lines="1"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/rectangular_background_curved_edges"
        android:hint="@string/hint_email"
        android:layout_gravity="center_horizontal"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/user_password"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textStyle="normal"
        android:drawableStart="@drawable/first_last_name24"
        android:drawablePadding="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color"
        android:lines="1"
        android:textSize="13sp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/rectangular_background_curved_edges"
        android:layout_marginTop="10dp"
        android:hint="@string/hint_password"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:id="@+id/rl_country_spinner"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangular_background_curved_edges"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:id="@+id/icon_country"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/country24" />

        <Spinner
            android:id="@+id/country_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/icon_country"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"

            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

    </RelativeLayout>


