<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/all_screens_bg"
    tools:context="com.payworks.ui.fragments.MerchantFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:background="@drawable/rectangular_background_theme"
    android:layout_height="45dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="50dp"
    android:id="@+id/my_product"
    android:orientation="horizontal">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="5dp"
    android:paddingStart="10dp"

    android:src="@drawable/product24"
    android:background="@color/theme_primary_dark"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:text="@string/my_products"

        />

</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/rectangular_background_theme"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/my_donation"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingStart="10dp"
            android:src="@drawable/donations24"
            android:background="@color/theme_primary_dark"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:text="@string/my_donations"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/rectangular_background_theme"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/my_subscription"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingStart="10dp"
            android:src="@drawable/subscribe_rss_button24"
            android:background="@color/theme_primary_dark"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:text="@string/my_subscriptions"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/rectangular_background_theme"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/my_tickets"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingStart="10dp"
            android:src="@drawable/tickets_couple24"
            android:background="@color/theme_primary_dark"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:text="@string/my_tickets"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/rectangular_background_theme"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/my_invoices"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingStart="10dp"
            android:src="@drawable/invoice24"
            android:background="@color/theme_primary_dark"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:text="@string/my_invoices"

            />

    </LinearLayout>
</LinearLayout>
